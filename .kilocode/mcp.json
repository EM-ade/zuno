{
  "mcpServers": {
    "context7": {
      "command": "npx",
      "args": [
        "-y",
        "@upstash/context7-mcp"
      ],
      "env": {
        "DEFAULT_MINIMUM_TOKENS": ""
      },
      "alwaysAllow": [
        "get-library-docs"
      ]
    },
    "exa": {
      "command": "npx",
      "args": [
        "-y",
        "exa-mcp-server"
      ],
      "env": {
        "EXA_API_KEY": "1f0f8fe0-0ec9-44d4-aa71-155e6ebc9ea2"
      },
      "alwaysAllow": [
        "web_search_exa",
        "crawling_exa"
      ]
    }
  }
}